@model IEnumerable<DemoDaysApplication.Models.Budget>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Budge Index</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SponsorshipCosts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventAdditionalsCosts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TravelCosts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCosts)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SponsorshipCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventAdditionalsCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCosts)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
