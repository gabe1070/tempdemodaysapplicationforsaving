@model DemoDaysApplication.Models.Budget

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="SponsorshipCosts" class="control-label"></label>
                <input asp-for="SponsorshipCosts" class="form-control" />
                <span asp-validation-for="SponsorshipCosts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventAdditionalsCosts" class="control-label"></label>
                <input asp-for="EventAdditionalsCosts" class="form-control" />
                <span asp-validation-for="EventAdditionalsCosts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelCosts" class="control-label"></label>
                <input asp-for="TravelCosts" class="form-control" />
                <span asp-validation-for="TravelCosts" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="TotalCosts" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
