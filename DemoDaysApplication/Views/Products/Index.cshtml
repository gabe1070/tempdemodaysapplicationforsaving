@model IEnumerable<DemoDaysApplication.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Total Inventory
                </th>
                <th>
                    Available Inventory
                </th>
                <th>
                    Inventory Assigned To Events
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedOutQuantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit Total Inventory</a>
            </td>
        </tr>
}
    </tbody>
</table>
